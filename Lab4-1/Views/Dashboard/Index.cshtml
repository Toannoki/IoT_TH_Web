@model Lab4_1.Models.DashboardViewModel
@{
    ViewData["Title"] = "MQTT Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="container-fluid main-container">
    <div class="text-center mb-4">
        <h1><i class="fas fa-tachometer-alt text-primary"></i> MQTT Real-time Dashboard</h1>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header"><i class="fas fa-plus-circle"></i> Subscribe to a new Topic</div>
                <div class="card-body">
                    <form asp-action="Subscribe" method="post" class="d-flex">
                        <input type="text" name="name" class="form-control me-2" placeholder="Cảm biến nhiệt độ,..." required>
                        <input type="text" name="description" class="form-control me-2" placeholder="Mô tả..." required>
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="dashboard-data" class="row">
        @if (!Model.Devices.Any())
        {
            <div class="col-12">
                <p id="placeholder-text" class="text-muted text-center">No devices are being monitored.</p>
            </div>
        }
        else
        {
            @foreach (var device in Model.Devices)
            {
                var safeId = device.Topic.Replace("/", "-");
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card shadow-sm rounded-3 mb-4 p-3"
                         id="card-@safeId"
                         data-message='@device.Message'
                         style="border: 1px solid #e0e0e0; background: #f9fdfb;">

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-wifi text-success me-2"></i>
                                <h6 class="mb-0 fw-bold">@device.Name</h6>
                            </div>
                            <span class="badge bg-success" id="status-@safeId">Online</span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center p-2 rounded mb-2" style="background:#f0faff;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-thermometer-half text-danger fs-5 me-2"></i>
                                <span>Temperature</span>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold fs-6" id="temp-@safeId">-- °C</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center p-2 rounded mb-2" style="background:#f0fffa;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-droplet text-info fs-5 me-2"></i>
                                <span>Humidity</span>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold fs-6" id="humi-@safeId">-- %</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center p-2 rounded" style="background:#fdfdfd;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-lightbulb text-warning fs-5 me-2"></i>
                                <span>LED Status</span>
                            </div>
                            <div>
                                <span class="badge bg-secondary" id="led-@safeId">OFF</span>
                                <button class="btn btn-sm btn-outline-primary ms-2 toggle-led-btn" data-topic="@device.Topic">Toggle</button>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center p-2 rounded" style="background:#fdfdfd;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-fan text-primary fs-5 me-2"></i>
                                <span>Fan Status</span>
                            </div>
                            <div>
                                <span class="badge bg-secondary" id="fan-@safeId">OFF</span>
                                <button class="btn btn-sm btn-outline-primary ms-2 toggle-fan-btn" data-topic="@device.Topic">Toggle</button>
                            </div>
                        </div>

                        <div class="text-end mt-2">
                            <small class="text-muted" id="last-seen-@safeId">Last seen: --:--:--</small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div id="chart-container" class="card p-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0"><i class="fas fa-chart-line"></i> Real-time Chart</h4>
                    <div class="d-flex align-items-center">
                        <label for="topic-selector" class="form-label me-2 mb-0">Topic:</label>
                        <select id="topic-selector" class="form-select" style="width: 200px;">
                            <option value="">-- Select a topic --</option>
                        </select>
                    </div>
                </div>
                <canvas id="realtimeChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.umd.min.js"></script>
    <script>
        var devices = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Devices));
    </script>
    <script src="~/js/dashboard.js"></script>
}
